@model MvcWebUI.Models.CartSummaryViewModel
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    @*<a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>*@
    @foreach (var item in Model.Cart.CartLines)
    {
        <a class="dropdown-item" href="#">@item.Product.ProductName <span class="badge">@item.Quantity </span></a>
    }
    <a class="dropdown-item">
        <i class="bi bi-cart4"></i>
        Total: @Model.Cart.Total
    </a>
    <div class="dropdown-divider"></div>
    <a asp-controller="Cart" asp-action="List">Go to Cart Details</a>
</div>